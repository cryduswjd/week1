<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/main_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="5pt"
        android:textColor="@color/gray"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintHorizontal_bias="0.1"
        android:text="10월 24일 토요일"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요약"
        android:textColor="@color/white"
        android:textSize="10pt"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동"
        android:textSize="10pt"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/box1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_corner"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="움직이기"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="418/420Kcal"
                android:textSize="10pt"
                android:textColor="#FF0000"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동하기"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/30"
                android:textSize="10pt"
                android:textColor="#62FF00"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일어서기"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6/12시"
                android:textSize="10pt"
                android:textColor="#00FFF7"/>
        </LinearLayout>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/링"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동"
        android:textColor="@color/white"
        android:textSize="10pt"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/사람" />

        </LinearLayout>

        <TextView
            android:id="@+id/inside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="실내걷기"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/km_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0.85km"
            android:textSize="20dp"
            android:textColor="#62FF00"
            app:layout_constraintTop_toBottomOf="@id/inside"
            android:layout_marginLeft="60dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/사람" />

        </LinearLayout>

        <TextView
            android:id="@+id/outside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="실외걷기"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/km_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.86km"
            android:textSize="20dp"
            android:textColor="#62FF00"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/outside"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/사람" />

        </LinearLayout>

        <TextView
            android:id="@+id/run"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="달리기"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/km_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.21km"
            android:textSize="20dp"
            android:textColor="#62FF00"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/run"/>

    </RelativeLayout>

</LinearLayout>